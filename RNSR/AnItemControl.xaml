<UserControl x:Class="RNSR.AnItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RNSR"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="283" Width="283" Height="85">
    <Grid x:Name="AnItem" Background="#FF4D5F52" Margin="0" HorizontalAlignment="Left" Height="85">
        <TextBlock x:Name="ItemDescription" TextWrapping="Wrap" Text="ItemDescription" Margin="0,0,0,5" Width="223" HorizontalAlignment="Left" Background="#FF838383"/>
        <TextBlock x:Name="ItemPrice" TextWrapping="Wrap" Text="ItemPrice" VerticalAlignment="Bottom" Height="20" HorizontalAlignment="Left" Width="60" Background="#FF9E9E9E" Margin="223,0,0,5"/>
        <Image x:Name="ItemNo" HorizontalAlignment="Left" Height="60" Margin="223,0,0,0" VerticalAlignment="Top" Width="60" OpacityMask="#FF898989" Source="NoCheck.png"/>
        <Image x:Name="ItemYes" HorizontalAlignment="Left" Height="60" Margin="223,0,0,0" VerticalAlignment="Top" Width="60" OpacityMask="#FF898989" Source="YesCheck.png"/>
    </Grid>
</UserControl>
